{% extends 'base.html.twig' %}

{% block body %}
<div id="fh5co-main">
    <div class="fh5co-gallery">
        <div class="col-lg-offset-1">
            <h1>Liste des menus</h1>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for menu in menus %}
                    <tr>
                        <td><a href="{{ path('menu_show', { 'id': menu.id }) }}">{{ menu.id }}</a></td>
                        <td>{{ menu.name }}</td>
                        <td>
                            <a href="{{ path('menu_show', { 'id': menu.id }) }}"><button class="btn btn-success">Voir</button></a>

                            <a href="{{ path('menu_edit', { 'id': menu.id }) }}"><button class="btn btn-warning">Modifier</button></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('menu_new') }}"><button class="btn btn-info">Cr√©er un menu</button></a>
        </div>
    </div>
</div>
{% endblock %}
